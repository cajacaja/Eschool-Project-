@model DodajObavjestVM
@{
    ViewData["Title"] = "DodajObavjest";
}

<link href="~/jquery-te-1.4.0.css" rel="stylesheet" />
<script src="~/jquery-te-1.4.0.min.js"></script>

<h2>Uredi obavjest</h2>

<form asp-action="SnimiUredjeno" method="post">

        <input asp-for="ObavjestID" value="@Model.ObavjestID"  hidden/>
    
    <div class="row">
        <div class="form-group col-md-8">
            <label asp-for="Naslov">Naslov</label>
            <input asp-for="Naslov" class="form-control" type="text" value="@Model.Naslov" />

        </div>

        <div class="form-group">
            <div class="col-md-2">
                <label asp-for="TipObavjestiID">Tip obavjesti</label>
                <select asp-for="TipObavjestiID" asp-items="Model.TipObavjesti"  class="form-control">
                    <option value="@Model.TipObavjestiID" selected></option>
                    
                </select>
            </div>
        </div>

        <div class="form-group col-md-12">
            <label asp-for="Sadrzaj">Sadrzaj</label>
            <textarea id="pisaniText" class="form-control" asp-for="Sadrzaj" rows="20">
                @Html.Raw(Model.Sadrzaj)
            </textarea>
            <br />
            <button type="submit" class="btn btn-danger">Snimi</button>
        </div>
    </div>


</form>

<script>
    $(document).ready(function () {

        $("#pisaniText").jqte();
     });

</script>