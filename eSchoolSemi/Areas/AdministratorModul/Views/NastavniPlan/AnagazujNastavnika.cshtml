@model AngazujNastavnikVM
@{
    ViewData["Title"] = "AnagazujNastavnika";
}

<h2>AnagazujNastavnika</h2>
<form asp-action="AnagazujNastavnika" method="post">
    <div class="row">
        <div class="form-group">
            <label asp-for="NastavniPlanPredmetID" class="col-md-2 control-label">ID</label>
            <input asp-for="NastavniPlanPredmetID" value="@Model.NastavniPlanPredmetID" readonly /> @*Ovo je ovde da moze ocitat u kontorleru*@
        </div>
        <div class="form-group">
            <label asp-for="NastavnikID" class="col-md-2 control-label">Nastavnik</label>
            <select asp-for="NastavnikID" asp-items="@Model.Nastavnici" class="form-control"></select>
        </div>

        <div class="form-group">
            <label asp-for="OdjeljenjeID" class="col-md-2 control-label">Odjeljenje</label>
            <select asp-for="OdjeljenjeID" asp-items="@Model.Odjeljenja" class="form-control"></select>
        </div>
    </div>


    <button type="submit" class="btn btn-danger col-md-3 col-md-offset-3">Angazuj nastavnika!</button>
</form>
