@model Predmet
@{
    ViewData["Title"] = "DodajPredmet";
}

<h2>DodajPredmet</h2>

<form asp-action="DodajPredmet" class="col-md-5" method="post">
    <div class="row">
        <div class="form-group">
            <label asp-for="Oznaka"></label>
            <input asp-for="Oznaka" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Naziv"></label>
            <input asp-for="Naziv" class="form-control" />
        </div>
    </div>
    <button type="submit" class="btn btn-danger">Dodaj predmet!</button>
</form>