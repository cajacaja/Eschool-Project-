@model Roditelj
@{
    ViewData["Title"] = "Detalji";
}
<div class="modal fade" id="detaljiRoditelj" tabindex="-1" role="dialog" aria-labelledby="detaljiRoditeljLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="detaljiRoditeljLabel">Ucenik detalj</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Ime)
                                @Html.TextBoxFor(model => model.Ime, new { @class = "form-control", @readonly = "readonly" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Prezime)
                                @Html.TextBoxFor(model => model.Prezime, new { @class = "form-control", @readonly = "readonly" })
                                @Html.LabelFor(model => model.Email)
                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @readonly = "readonly" })
                                @Html.LabelFor(model => model.Telefon)
                                @Html.TextBoxFor(model => model.Telefon, new { @class = "form-control", @readonly = "readonly" })
                                @Html.LabelFor(model => model.DatumRodenja)
                                @Html.TextBoxFor(model => model.DatumRodenja, new { @class = "form-control", @readonly = "readonly" })
                            </div>
                        </div>
                    </div>
                </div>

                <h3>Djeca @Model.Ime @Model.Prezime</h3>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Ime</th>
                            <th>Prezime</th>
                        </tr>

                    </thead>
                    <tbody>
                        @foreach (var item in Model.Uceniks)
            {
                <tr>
                    <td>@item.Ime</td>
                    <td>@item.Prezime</td>
                </tr>

}
                    </tbody>

                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
