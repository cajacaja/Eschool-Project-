@model OdjenjenjeVM

<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>

<div class="modal fade" id="dodajOdljeljenje" tabindex="-1" role="dialog" aria-labelledby="dodajOdljenjeLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title text-center" id="dodajOdljenjeLabel">Dodaj odjeljenje</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <form asp-action="Snimi" method="post" class="col-sm-offset-2 col-sm-8">
                        <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />

                        <div class="row">

                            <div class="form-group">
                                <label asp-for=" GodinaStudiranjaId" class="  control-label">Godina studija</label>
                                <select asp-for=" GodinaStudiranjaId" asp-items="@Model.GodinaStudiranja" class="form-control">
                                    <option></option>
                                </select>
                                <span asp-validation-for="GodinaStudiranjaId" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Oznaka" class="  control-label">Oznaka</label>
                                <input asp-for="Oznaka" class="form-control" />
                                <span asp-validation-for="Oznaka" class="text-danger"></span>
                            </div>


                            <div class="form-group">
                                <label asp-for=" RazredID" class="  control-label">Razred</label>
                                <select asp-for=" RazredID" asp-items="@Model.BrojRazreda" class="form-control"></select>
                                <span asp-validation-for="RazredID" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for=" Kapacitet" class="  control-label">Kapacitet</label>
                                <input asp-for=" Kapacitet" class="form-control" />
                                <span asp-validation-for="Kapacitet" class="text-danger"></span>
                            </div>



                            <div class="form-group">
                                <label asp-for=" NastavnikID" class="  control-label">Razrednik</label>
                                <select asp-for=" NastavnikID" asp-items="@Model.Razrednik" class="form-control"></select>
                                <span asp-validation-for="NastavnikID" class="text-danger"></span>
                            </div>



                            <div class="form-group">
                                <label asp-for=" NastavniPlanId" class="  control-label">Nastavni plan</label>
                                <select asp-for=" NastavniPlanId" asp-items="@Model.NastavniPlan" class="form-control"></select>
                            </div>


                        </div>



                    </form>

                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" data-save="modal" data-url="@Url.Action("OdljenjenjeTabela", "Odjeljenje")">Save</button>

            </div>
        </div>
    </div>
</div>


<script src="~/js/ajaxModal.js"></script>