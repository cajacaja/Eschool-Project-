@using eSchoolSemi.Data.Models
@model IEnumerable<Raspored>
    @{
        ViewData["Title"] = "Index";
    }

    <h2>Index</h2>

<div class="container">
    <div class="row">
        <div class="col">
            <table class="table table-responsive">
                <thead>
                    <tr>
                        <td>Naziv</td>
                        <td>Akcija</td>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        @foreach (var raspored in Model)
                        {
                            <td>@raspored.Naziv</td>
                            <td><a asp-action="UrediRaspored" asp-route-id="@raspored.RasporedID" class="btn btn-info">Uredi</a></td>
                        }
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
