@model List<Ucenik>
@{
    ViewData["Title"] = "Index";
}

<a asp-action="DodajUcenika" class="btn btn-success">Dodaj Ucenika</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Naziv</th>
            <th>Email</th>
            <th>Telefon</th>
            <th>Korisnicko Ime</th>
            <th>Lozinka</th>
            <th>Akcije</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Ime @item.Prezime</td>         
                <td>@item.Email</td>
                <td>@item.Telefon</td>
                <td>@item.KorisnickoIme</td>
                <td>@item.Lozinka</td>
                <td>
                    <form asp-action="Obrisi" method="post">
                        <input hidden name="UcenikID" value="@item.KorisnikId" />
                        <button type="submit" class="btn btn-danger">Obrisi</button>
                    </form>
                </td>
                <td>
                    <a asp-action="Uredi" asp-route-id="@item.KorisnikId" class="btn btn-info">Uredi</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="DodajUOdjeljenje" class="btn btn-info">Dodaj u odjeljenje!</a>